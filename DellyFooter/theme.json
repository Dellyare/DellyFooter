{
    "name": "DellyFooter",
    "author": "Dellyare",
    "manifest_version": 4,
    "version": "v1.0",
    "target": "System-Wide",
    "description": "Many settings and effects for footer.",
    "inject": {
        "shared.css": ["SP"]
    },
    "patches": {
        "Effect": {
            "default": "Blur",
            "type": "dropdown",
            "values": {
                "None": {},
                "Blur": {
                    "effects/blur-effect.css": ["SP"]
                },
                "Gradient": {
                    "effects/gradient-effect.css": ["SP"]
                },
                "RGB": {
                    "effects/rgb-effect.css": ["SP"]
                },
                "RGB Breathing": {
                    "effects/breathing-rgb-effect.css": ["SP"]
                },
                "Christmas": {
                    "effects/christmas-effect.css": ["SP"]
                },
                "Transparent": {
                    "effects/transparent-effect.css": ["SP"]
                },
                "Inverted": {
                    "effects/inverted-effect.css": ["SP"]
                },
                "MacOS (Light)": {
                    "effects/macos-light-effect.css": ["SP"]
                },
                "MacOS (Dark)": {
                    "effects/macos-dark-effect.css": ["SP"]
                }
            }
        },
        "Size": {
            "default": "Default",
            "type": "dropdown",
            "values": {
                "Default": {
                    "sizes/default-size.css": ["SP"]
                },
                "Small": {
                    "sizes/small-size.css": ["SP"]
                },
                "Smaller": {
                    "sizes/tiny-size.css": ["SP"]
                }
            }
        },
        "Rounded corners": {
            "default": "No",
            "type": "checkbox",
            "values": {
                "No": {},
                "Yes": {
                    "checkboxes/round-corners.css": ["SP"]
                }
            }
        },
        "Normal font": {
            "default": "No",
            "type": "checkbox",
            "values": {
                "No": {},
                "Yes": {
                    "checkboxes/normal-font.css": ["SP"]
                }
            }
        },
        "Centered Home Patch": {
            "default": "No",
            "type": "checkbox",
            "values": {
                "No": {},
                "Yes": {
                    "checkboxes/centered-home-patch.css": ["SP"]
                }
            }
        }
    }
}
